#!/bin/sh
export HOST=heinrich-isaac
export BORG_REPO=rsync-dot-net:borg-backups/$HOST
export BORG_PASSPHRASE=reborn-mesdames-gibbon-mayest
ARCHIVE=$USER-$(uname -n)-daily-$(date -I)
EXCLUDEFILE=$HOME/.config/borg/exclude

cd $HOME
cmd="ionice -c3 \
        borg create \
            --remote-path borg14 \
            --progress --stats \
            --compression auto,lz4 \
            --exclude-caches \
            --exclude-from $EXCLUDEFILE \
            ::$ARCHIVE \
            .
       "

if command -v systemd-inhibit
then systemd-inhibit \
    --what=sleep \
    --who='Borg backup' \
    --why='Backup in progress' \
    $cmd
else $cmd
fi
